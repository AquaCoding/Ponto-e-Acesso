      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="45.0">
         <children>
            <Label text="Nome" />
            <TextField fx:id="horarioNome" VBox.vgrow="ALWAYS" />
            <Label text="Inicio" />
            <AnchorPane prefWidth="200.0">
               <children>
                  <ComboBox fx:id="horarioInicioHora" prefWidth="150.0" promptText="Hora" />
                  <ComboBox fx:id="horarioInicioMinuto" layoutX="158.0" prefWidth="150.0" promptText="Minuto" />
               </children>
            </AnchorPane>
            <Label text="Termino" />
            <AnchorPane prefWidth="200.0">
               <children>
                  <ComboBox fx:id="horarioTerminoHora" prefWidth="150.0" promptText="Hora" />
                  <ComboBox fx:id="horarioTerminoMinuto" layoutX="158.0" prefWidth="150.0" promptText="Minuto" />
               </children>
            </AnchorPane>
            <Label text="Almoço inicio" />
            <AnchorPane prefWidth="200.0">
               <children>
                  <ComboBox fx:id="almocoInicioHora" prefWidth="150.0" promptText="Hora" />
                  <ComboBox fx:id="almocoInicioMinuto" layoutX="158.0" prefWidth="150.0" promptText="Minuto" />
               </children>
            </AnchorPane>
            <Label text="Almoço termino" />
